#!/usr/bin/env bash

source ./scripts/_init

set -ex

TEST_DIR="${BASE_DIR:-$ROOT_DIR}"

"$ROOT_DIR/node_modules/istanbul/lib/cli.js" cover \
    --report cobertura "$ROOT_DIR/node_modules/.bin/_mocha" \
    -x "$TEST_DIR/dist/**/*.test.js" \
    -- \
    -t 240000 \
    --recursive "$TEST_DIR/dist/**/*.test.js" \
    -R xunit-file
