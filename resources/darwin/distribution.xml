<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>PKG_DESC (VERSION)</title>
    <pkg-ref id="IDENTIFIER"/>
    <options customize="never"/>
    <choices-outline>
        <line choice="default">
            <line choice="PKG_NAME"/>
        </line>
    </choices-outline>
    <choice id="default"/>
    <choice id="PKG_NAME" title="installer" visible="false">
        <pkg-ref id="IDENTIFIER"/>
    </choice>
    <pkg-ref id="IDENTIFIER" version="VERSION" onConclusion="none" auth="Root">PKG_NAME.pkg</pkg-ref>
</installer-gui-script>
